
Views/Donations/Index.cshtml:

@model IEnumerable<Healing_Hands.Models.Donation>

<h2>Donations</h2>
<table class="table">
<thead>
<tr>
<th>Donor Name</th>
<th>Amount</th>
<th>Date</th>
</tr>
</thead>
<tbody>
@foreach (var donation in Model)
{
<tr>
<td>@donation.DonorName</td>
<td>@donation.Amount</td>
<td>@donation.Date</td>
</tr>
}
</tbody>
</table>
<a href="/Donations/Create" class="btn btn-primary">Add Donation</a>

Views/Donations/Create.cshtml:

@model Healing_Hands.Models.Donation

<h2>Add Donation</h2>
<form asp-action="Create" method="post">
<div class="form-group">
<label asp-for="DonorName"></label>
<input asp-for="DonorName" class="form-control" />
</div>
<div class="form-group">
<label asp-for="Amount"></label>
<input asp-for="Amount" class="form-control" />
</div>
<div class="form-group">
<label asp-for="Date"></label>
<input asp-for="Date" class="form-control" />
</div>
<button type="submit" class="btn btn-primary">Save</button>
</form>
